- watchable_params = { watchable_id: watchable.id, watchable_type: watchable.class.name }
- if user_signed_in?
  - if watchable.watcher.pluck(:user_id).include?(current_user.id)
    = link_to inline_svg('eye.svg'),
      watcher_path(watchable_params), method: :post, remote: true
  - else
    = link_to inline_svg('no_eye.svg'),
      watcher_path(watchable_params), method: :post, remote: true
